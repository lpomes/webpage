            <th>Product</th>
            <th>Price</th>
            <th>Item</th>
            <th>Add to Cart</th>
        </tr>
    <% data.forEach(function(product){ %>
        <tr style='text-align:left; background-color:white'>
            <td><%= product.productName %></td>
            <td>$<%= product.price %></td>
            <td><img src="<%=product.productImage%>" width="200px" height="200px"></td>
            <td style="padding-top: 120px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Remove<br><button>+</button><button>-</button></td>
